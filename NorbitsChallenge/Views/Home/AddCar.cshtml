@model NorbitsChallenge.Models.CarInputModel

@{
    ViewData["Title"] = "AddCar";
}

<h2>Add Car</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarLicensePlate" class="control-label"></label>
                <input asp-for="CarLicensePlate" class="form-control" />
                <span asp-validation-for="CarLicensePlate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarDescription" class="control-label"></label>
                <input asp-for="CarDescription" class="form-control" />
                <span asp-validation-for="CarDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarModel" class="control-label"></label>
                <input asp-for="CarModel" class="form-control" />
                <span asp-validation-for="CarModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarBrand" class="control-label"></label>
                <input asp-for="CarBrand" class="form-control" />
                <span asp-validation-for="CarBrand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TireCount" class="control-label"></label>
                <input asp-for="TireCount" class="form-control" />
                <span asp-validation-for="TireCount" class="text-danger"></span>
            </div>


                <div class="form-group" style="display: inline;padding-right:5px">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>

</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
